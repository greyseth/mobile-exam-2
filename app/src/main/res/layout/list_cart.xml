<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_panel_primary"
    android:padding="8dp"
    android:orientation="horizontal"
    android:weightSum="1"
    android:layout_marginBottom="16dp">
    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight=".35"
        android:src="@drawable/icon_noimg"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_round_corners"
        android:clipToOutline="true"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".65"
        android:padding="8dp">

        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:text="Item Name Goes Here"
            android:textColor="@color/tertiary_col"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemName"
            android:layout_alignParentStart="true"
            android:text="Rp. 000,000,000"
            android:textColor="@color/tertiary_col"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/selengkapnyaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:weightSum="3"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/itemQuantityMinus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_minus"/>

            <TextView
                android:id="@+id/itemQuantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/tertiary_col"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/itemQuantityPlus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_plus"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>